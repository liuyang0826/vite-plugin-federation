{
  "include": ["src", "client.d.ts"],
  "exclude": ["dist", "node_modules", "test"],
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": false,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "noImplicitAny": false,
    "paths": {
      "@liuyang0826/vite-plugin-federation": ["./types"]
    }
  }
}
